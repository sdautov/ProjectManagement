<Window x:Class="ProjectManagement.NewDocumentationSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый комплект документов" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel Margin="10">
            <TextBlock Text="Марка" Margin="0,0,0,5" />
            <ComboBox Name="MarkComboBox" Margin="0,5,0,5" DisplayMemberPath="ShortName" />
            <TextBlock Text="Номер" Margin="0,0,0,5" />
            <TextBox x:Name="NumberTextBox" Margin="0,0,0,5" PreviewTextInput="NumberValidationTextBox" />
            <Button Content="Сохранить" Margin="0,5,0,0" HorizontalAlignment="Left" Width="100" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>