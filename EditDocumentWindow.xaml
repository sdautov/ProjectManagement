<Window x:Class="ProjectManagement.EditDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать документ" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel Margin="10">
            <TextBlock Text="Тип документа:" Margin="5" />
            <ComboBox Name="DocumentTypeComboBox" Margin="0,5,0,5" DisplayMemberPath="ShortName" />
            <TextBlock Text="Название:" Margin="5" />
            <TextBox x:Name="DocumentNameTextBox" Margin="0,5,0,5" />
            <Button Content="Сохранить" Margin="0,5,0,0" HorizontalAlignment="Left" Width="100" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>